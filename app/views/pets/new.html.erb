<h1>Add A Pet</h1>
<%= link_to "All Pets", "/pets" %>
<%= link_to "All Shelters", "/shelters" %>

<%= form_tag "/shelters/#{@shelter_id}/pets", method: :post do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age %>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %>
  <%= hidden_field_tag :adoption_status, "Adoptable" %>
  <%= submit_tag "Create Pet" %>
<% end %>
