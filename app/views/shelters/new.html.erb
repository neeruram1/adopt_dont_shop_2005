<h1>Create a New Shelter</h1>
<%= link_to "All Pets", "/pets" %>
<%= link_to "All Shelters", "/shelters" %>

<%= form_tag "/shelters" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>
  <%= submit_tag "Create Shelter" %>
<% end %>
